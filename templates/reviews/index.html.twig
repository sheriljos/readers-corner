{% extends "base.html.twig" %}

{% block title %}Self Love{% endblock %}

{% block body %}
    <h1>Find your reviews here</h1>
    <table class="table table-striped">
        <thead>
            <tr class="table-active">
                <th scope="col">Type</th>
                <th scope="col">Column heading</th>
            </tr>
        </thead>
        <tbody>
            {% for review in reviews %}
                <tr>
                    <td>{{ review.title }}</td>
                    <td>
                        <a type="button" href="review/{{ review.id }}" class="btn btn-primary">View</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table> 
{% endblock %}